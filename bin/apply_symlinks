#! /usr/bin/env bash

# DESCRIPTION
# Applies symlinks using stow

[[ -z "${DOTFILE_DIR}" ]] && DOTFILE_DIR=$HOME/dev/dotfiles

stow -v -R --target=$HOME --dir=$DOTFILE_DIR asdf
stow -v -R --target=$HOME --dir=$DOTFILE_DIR alacritty
stow -v -R --target=$HOME --dir=$DOTFILE_DIR bat
stow -v -R --target=$HOME --dir=$DOTFILE_DIR elixir
stow -v -R --target=$HOME --dir=$DOTFILE_DIR eslint
stow -v -R --target=$HOME --dir=$DOTFILE_DIR helix
stow -v -R --target=$HOME --dir=$DOTFILE_DIR jetbrains
stow -v -R --target=$HOME --dir=$DOTFILE_DIR kitty
stow -v -R --target=$HOME --dir=$DOTFILE_DIR neovim
stow -v -R --target=$HOME --dir=$DOTFILE_DIR prettier
stow -v -R --target=$HOME --dir=$DOTFILE_DIR ripgrep
stow -v -R --target=$HOME --dir=$DOTFILE_DIR ruby
stow -v -R --target=$HOME --dir=$DOTFILE_DIR silver_searcher
stow -v -R --target=$HOME --dir=$DOTFILE_DIR tig
stow -v -R --target=$HOME --dir=$DOTFILE_DIR tmux
stow -v -R --target=$HOME --dir=$DOTFILE_DIR vim
stow -v -R --target=$HOME --dir=$DOTFILE_DIR youtube-dl
stow -v -R --target=$HOME --dir=$DOTFILE_DIR yabai
stow -v -R --target=$HOME --dir=$DOTFILE_DIR zsh
